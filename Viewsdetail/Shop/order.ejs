<%- include('../include/nav.ejs') %>

<main>
    <% if (orders.length <= 0) { %>
        <h1>Nothing there!</h1>
    <% } else { %>
        <ul style="background-color:beige">
            <% orders.forEach(order => { %>
                <li class="orders__item">
                    <h1>Order - # <%= order._id %></h1>
                    <ul style="background-color:beige">
                        <% order.products.forEach(p => { %>
                            <li class="orders__products-item"><%= p.product.name %> (<%= p.quantity %>)</li>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } %>
</main>