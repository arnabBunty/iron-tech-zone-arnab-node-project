<%-include('../Includes/header.ejs') %>
<link rel="stylesheet" href="/CSS/productdetail.css">
<title><%=title%></title>
</head>

<%-include('../Includes/preloader.ejs') %>
<%-include('../Includes/nav.ejs') %>

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                      <div class="tab-pane active" id="pic-1"><img src="../<%=product.prod_img%>" /></div>
                      <div class="tab-pane" id="pic-2"><img src="../<%=product.prod_img%>" /></div>
                      <div class="tab-pane" id="pic-3"><img src="../<%=product.prod_img%>" /></div>
                      <div class="tab-pane" id="pic-4"><img src="../<%=product.prod_img%>" /></div>
                      <div class="tab-pane" id="pic-5"><img src="../<%=product.prod_img%>" /></div>
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                      <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="../<%=product.prod_img%>" /></a></li>
                      <li><a data-target="#pic-2" data-toggle="tab"><img src="../<%=product.prod_img%>" /></a></li>
                      <li><a data-target="#pic-3" data-toggle="tab"><img src="../<%=product.prod_img%>" /></a></li>
                      <li><a data-target="#pic-4" data-toggle="tab"><img src="../<%=product.prod_img%>" /></a></li>
                      <li><a data-target="#pic-5" data-toggle="tab"><img src="../<%=product.prod_img%>" /></a></li>
                    </ul>
                    
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title"><%=product.prod_name%></h3>
                    <div class="rating">
                        <div class="stars">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        <span class="review-no">41 reviews</span>
                    </div>
                    <p class="product-description"><%=product.prod_desc%></p>
                    <h4 class="price">current price: <span>&#8377;<%=product.prod_price%></span></h4>
                    <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                    <div class="action">
                        <form action="/postcart/null" method="POST">
                            <input type="hidden" name="_csrf" value="<%=csrf%>">
                            <input type="hidden" name="prod_id" value="<%=product._id%>">
                            <!-- <input type="submit" value="Add to Cart"> -->
                            <button class="add-to-cart btn btn-default" type="submit">add to cart</button>
                        </form>
                        <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%-include('../Includes/footer.ejs') %>